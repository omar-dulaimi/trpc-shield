{
  "name": "trpc-shield",
  "version": "1.0.0-beta.1",
  "type": "module",
  "description": "tRPC permissions as another layer of abstraction!",
  "repository": "https://github.com/omar-dulaimi/trpc-shield",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": {
    "name": "Omar Dulaimi",
    "url": "https://github.com/omar-dulaimi"
  },
  "keywords": [
    "trpc",
    "trpc-shield"
  ],
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prerelease": "npm run build",
    "release": "./package.sh && cd package && npm publish",
    "semantic-release": "semantic-release",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,yml}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "24.0.15",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "rimraf": "6.0.1",
    "semantic-release": "^22.0.12",
    "supertest": "^7.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "vitest": "^3.2.4",
    "zod": "^3.23.8"
  },
  "bugs": {
    "url": "https://github.com/omar-dulaimi/trpc-shield/issues"
  },
  "homepage": "https://github.com/omar-dulaimi/trpc-shield#readme",
  "dependencies": {
    "@trpc/server": "^11.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
